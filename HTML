<body>
    <div class="quiz-container">
        <h1>Football Quiz</h1>
        <div class="question">
            Who won the FIFA World Cup in 2018?
        </div>
        <ul class="options">
            <li>Brazil</li>
            <li>France</li>
            <li>Germany</li>
            <li>Argentina</li>
        </ul>
        <button class="submit-btn">Submit</button>
    </div>

    <script>
        const options = document.querySelectorAll('.options li');
        const submitBtn = document.querySelector('.submit-btn');
        let selectedOption = null;

        options.forEach(option => {
            option.addEventListener('click', () => {
                if (selectedOption) {
                    selectedOption.style.backgroundColor = '#1abc9c';
                }
                option.style.backgroundColor = '#f39c12';
                selectedOption = option;
            });
        });

        submitBtn.addEventListener('click', () => {
            if (selectedOption) {
                if (selectedOption.innerText === 'France') {
                    alert('Correct! France won the FIFA World Cup in 2018.');
                } else {
                    alert('Wrong! The correct answer is France.');
                }
            } else {
                alert('Please select an option!');
            }
        });
    </script>
</body>
</html>
