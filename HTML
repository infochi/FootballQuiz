<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Football Quiz</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50;
            color: white;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .quiz-container, .result-container, .start-container, .final-container {
            background-color: #34495e;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            padding: 20px;
            width: 300px;
            text-align: center;
            display: none; /* Hidden by default */
        }
        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .question {
            font-size: 18px;
            margin-bottom: 15px;
        }
        .options {
            list-style-type: none;
            padding: 0;
        }
        .options li {
            background-color: #1abc9c;
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }
        .options li:hover {
            background-color: #16a085;
        }
        .submit-btn, .next-btn, .restart-btn, .quit-btn, .start-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            display: inline-block;
            margin-top: 10px;
        }
        .submit-btn:hover, .next-btn:hover, .restart-btn:hover, .quit-btn:hover, .start-btn:hover {
            background-color: #c0392b;
        }
        .next-btn, .restart-btn, .quit-btn {
            background-color: #3498db;
        }
        .next-btn:hover, .restart-btn:hover, .quit-btn:hover {
            background-color: #2980b9;
        }
        .final-container .score-message {
            font-size: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <!-- Start Screen -->
    <div class="start-container">
        <h1>Football Quiz</h1>
        <button class="start-btn">Start Quiz</button>
    </div>

    <!-- Quiz Screen -->
    <div class="quiz-container">
        <h1>Football Quiz</h1>
        <div class="question"></div>
        <ul class="options"></ul>
        <button class="submit-btn">Submit</button>
    </div>

    <!-- Result Screen -->
    <div class="result-container">
        <h1 class="result-message"></h1>
        <button class="next-btn">Next Question</button>
        <button class="restart-btn">Restart Quiz</button>
        <button class="quit-btn">Quit</button>
    </div>

    <!-- Final Score Screen -->
    <div class="final-container">
        <h1>Final Score</h1>
        <div class="score-message"></div>
        <button class="restart-btn">Restart Quiz</button>
        <button class="quit-btn">Quit</button>
    </div>

    <script>
        const questions = [
            {
                question: "Who won the FIFA World Cup in 2018?",
                options: ["Brazil", "France", "Germany", "Argentina"],
                correct: "France"
            },
            {
                question: "Which player has won the most Ballon d'Or awards?",
                options: ["Cristiano Ronaldo", "Lionel Messi", "Zinedine Zidane", "Ronaldinho"],
                correct: "Lionel Messi"
            },
            {
                question: "Which country hosted the 2014 FIFA World Cup?",
                options: ["Brazil", "Germany", "South Africa", "Russia"],
                correct: "Brazil"
            },
            {
                question: "Which football club has won the most UEFA Champions League titles?",
                options: ["Manchester United", "Real Madrid", "Bayern Munich", "Liverpool"],
                correct: "Real Madrid"
            }
        ];

        let shuffledQuestions = [];
        let currentQuestionIndex = 0;
        let selectedOption = null;
        let score = 0;
        let questionsAnswered = 0;

        const startContainer = document.querySelector('.start-container');
        const quizContainer = document.querySelector('.quiz-container');
        const resultContainer = document.querySelector('.result-container');
        const finalContainer = document.querySelector('.final-container');
        const questionEl = document.querySelector('.question');
        const optionsEl = document.querySelector('.options');
        const submitBtn = document.querySelector('.submit-btn');
        const nextBtn = document.querySelector('.next-btn');
        const restartBtns = document.querySelectorAll('.restart-btn');
        const quitBtns = document.querySelectorAll('.quit-btn');
        const startBtn = document.querySelector('.start-btn');
        const resultMessageEl = document.querySelector('.result-message');
        const scoreMessageEl = document.querySelector('.score-message');

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function loadQuestion() {
            const currentQuestion = shuffledQuestions[currentQuestionIndex];
            questionEl.innerText = currentQuestion.question;
            optionsEl.innerHTML = '';
            currentQuestion.options.forEach(option => {
                const li = document.createElement('li');
                li.innerText = option;
                li.addEventListener('click', () => {
                    if (selectedOption) {
                        selectedOption.style.backgroundColor = '#1abc9c';
                    }
                    li.style.backgroundColor = '#f39c12';
                    selectedOption = li;
                    submitBtn.style.display = 'inline-block'; // Show the submit button
                });
                optionsEl.appendChild(li);
            });
        }

        function handleSubmit() {
            if (selectedOption) {
                questionsAnswered++;
                const isCorrect = selectedOption.innerText === shuffledQuestions[currentQuestionIndex].correct;
                if (isCorrect) {
                    score++;
                    if (currentQuestionIndex + 1 < shuffledQuestions.length) {
                        showResultScreen(true);
                    } else {
                        showFinalScore(true); // Show final screen if all questions are answered
                    }
                } else {
                    showFinalScore(false); // Show final screen on incorrect answer
                }
            } else {
                alert('Please select an option!');
            }
        }

        function showResultScreen(isCorrect) {
            quizContainer.style.display = 'none';
            resultContainer.style.display = 'block';
            if (isCorrect) {
                resultMessageEl.innerText = 'Yay! You got it right!';
                nextBtn.style.display = 'inline-block'; // Show the next button
                restartBtns[0].style.display = 'none'; // Hide the restart button
                quitBtns[0].style.display = 'none'; // Hide the quit button
            }
        }

        function showFinalScore(allAnsweredCorrectly) {
            quizContainer.style.display = 'none';
            resultContainer.style.display = 'none';
            finalContainer.style.display = 'block';
            if (allAnsweredCorrectly) {
                scoreMessageEl.innerText = `Congratulations! You answered all questions correctly! Your score is ${score} out of ${questionsAnswered}`;
            } else {
                scoreMessageEl.innerText = `You lose! The correct answer was ${shuffledQuestions[currentQuestionIndex].correct}. Your final score is ${score} out of ${questionsAnswered}`;
            }
        }

        function handleNext() {
            currentQuestionIndex++;
            if (currentQuestionIndex < shuffledQuestions.length) {
                loadQuestion();
                selectedOption = null;
                resultContainer.style.display = 'none'; // Hide the result screen
                quizContainer.style.display = 'block'; // Show the quiz screen
            }
        }

        function restartQuiz() {
            shuffledQuestions = shuffleArray([...questions]); // Shuffle and copy the questions
            currentQuestionIndex = 0;
            score = 0;
            questionsAnswered = 0;
            goToQuizScreen();
            loadQuestion();
        }

        function goToStartScreen() {
            resultContainer.style.display = 'none';
            quizContainer.style.display = 'none';
            finalContainer.style.display = 'none';
            startContainer.style.display = 'block';
        }

        function goToQuizScreen() {
            resultContainer.style.display = 'none';
            finalContainer.style.display = 'none';
            startContainer.style.display = 'none';
            quizContainer.style.display = 'block';
        }

        startBtn.addEventListener('click', () => {
            restartQuiz(); // Start the quiz with shuffled questions
        });

        submitBtn.addEventListener('click', handleSubmit);
        nextBtn.addEventListener('click', handleNext);
        restartBtns.forEach(btn => btn.addEventListener('click', restartQuiz));
        quitBtns.forEach(btn => btn.addEventListener('click', goToStartScreen));

        goToStartScreen(); // Show the start screen initially
    </script>
</body>
</html>
