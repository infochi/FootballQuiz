<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Football Quiz</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50;
            color: white;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .quiz-container {
            background-color: #34495e;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            padding: 20px;
            width: 300px;
            text-align: center;
        }
        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .question {
            font-size: 18px;
            margin-bottom: 15px;
        }
        .options {
            list-style-type: none;
            padding: 0;
        }
        .options li {
            background-color: #1abc9c;
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }
        .options li:hover {
            background-color: #16a085;
        }
        .submit-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            display: none; /* Hidden initially */
        }
        .submit-btn:hover {
            background-color: #c0392b;
        }
        .next-btn {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
            display: none; /* Hidden initially */
        }
        .next-btn:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>
    <div class="quiz-container">
        <h1>Football Quiz</h1>
        <div class="question">
            <!-- The question text will be injected here by JavaScript -->
        </div>
        <ul class="options">
            <!-- The options will be injected here by JavaScript -->
        </ul>
        <button class="submit-btn">Submit</button>
        <button class="next-btn">Next</button>
    </div>

    <script>
        const questions = [
            {
                question: "Who won the FIFA World Cup in 2018?",
                options: ["Brazil", "France", "Germany", "Argentina"],
                correct: "France"
            },
            {
                question: "Which player has won the most Ballon d'Or awards?",
                options: ["Cristiano Ronaldo", "Lionel Messi", "Zinedine Zidane", "Ronaldinho"],
                correct: "Lionel Messi"
            },
            {
                question: "Which country hosted the 2014 FIFA World Cup?",
                options: ["Brazil", "Germany", "South Africa", "Russia"],
                correct: "Brazil"
            },
            {
                question: "Which football club has won the most UEFA Champions League titles?",
                options: ["Manchester United", "Real Madrid", "Bayern Munich", "Liverpool"],
                correct: "Real Madrid"
            }
        ];

        let currentQuestionIndex = 0;
        let selectedOption = null;

        const questionEl = document.querySelector('.question');
        const optionsEl = document.querySelector('.options');
        const submitBtn = document.querySelector('.submit-btn');
        const nextBtn = document.querySelector('.next-btn');

        function loadQuestion() {
            const currentQuestion = questions[currentQuestionIndex];
            questionEl.innerText = currentQuestion.question;
            optionsEl.innerHTML = '';
            currentQuestion.options.forEach(option => {
                const li = document.createElement('li');
                li.innerText = option;
                li.addEventListener('click', () => {
                    if (selectedOption) {
                        selectedOption.style.backgroundColor = '#1abc9c';
                    }
                    li.style.backgroundColor = '#f39c12';
                    selectedOption = li;
                    submitBtn.style.display = 'inline-block'; // Show the submit button
                });
                optionsEl.appendChild(li);
            });
        }

        function handleSubmit() {
            if (selectedOption) {
                const isCorrect = selectedOption.innerText === questions[currentQuestionIndex].correct;
                alert(isCorrect ? 'Correct!' : `Wrong! The correct answer is ${questions[currentQuestionIndex].correct}.`);
                submitBtn.style.display = 'none'; // Hide the submit button
                nextBtn.style.display = 'inline-block'; // Show the next button
            } else {
                alert('Please select an option!');
            }
        }

        function handleNext() {
            currentQuestionIndex++;
            if (currentQuestionIndex < questions.length) {
                loadQuestion();
                selectedOption = null;
                nextBtn.style.display = 'none'; // Hide the next button
            } else {
                alert('Quiz completed!');
                currentQuestionIndex = 0;
                loadQuestion();
            }
        }

        submitBtn.addEventListener('click', handleSubmit);
        nextBtn.addEventListener('click', handleNext);

        loadQuestion(); // Load the first question
    </script>
</body>
</html>
